{
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "arrowParentheses": "always",
            "quoteStyle": "single"
        }
    },
    "linter": {
        "rules": {
            "correctness": {
                "useJsxKeyInIterable": {
                    "level": "off"
                }
            }
        }
    }
}
